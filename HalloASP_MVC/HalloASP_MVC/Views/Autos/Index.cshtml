@model IEnumerable<HalloASP_MVC.Models.Auto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hersteller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gewicht)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baujahr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hersteller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gewicht)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baujahr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
